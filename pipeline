pipeline{
    agent {
        label 'Lable1'
    }
    parameters {
        string(name: 'text', description: 'Please Enter QA text')
        choice(choices: 'Dev\nPrd', description: 'Please Select QA Env', name: 'ENV' )
        password(name: 'password',defaultValue: 'xxxxxxxxx', description: 'please eneter QA env password' )
    }
    stages {
       stage ('Confirmation') 
       {
         steps 
         {
                input message: "Configuring ${params.text}. Do you want to proceed?", ok: 'Proceed'
         }
       }
       
       stage ('Cloning Script')
       {
            steps 
            {
               git branch: 'qa', url: 'https://github.com/kaza514/hello-world.git'
            }
       }
        stage ('Deploy') {
            steps {
                script{
                    
                if ("${params.ENV}".equalsIgnoreCase("Dev"))
                    {
                        sh '''
                        echo ${ENV}
                        echo ${password}
                        echo ${text}
                        hostname
                        ls -l
                        pwd'
                        ansible --version
                        '''
                    }
                else if ("${params.ENV}".equalsIgnoreCase("Prd"))
                    {
                        echo "this is prd"
                    }
                }
            }
        }
    }
}
